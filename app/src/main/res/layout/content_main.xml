<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv_show"
        android:background="#898765"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"/>

    <ws.dyt.stepview.view.StepTextView
        android:layout_marginTop="20dp"
        android:id="@+id/stepTextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:step_font_size="18sp"
        app:step_minus_background_selector="@drawable/step_minus_background_selector"
        app:step_minus_font_selector="@drawable/step_minus_font_selector"
        app:step_minus_text="-"
        app:step_plus_background_selector="@drawable/step_plus_background_selector"
        app:step_plus_font_selector="@drawable/step_plus_font_selector"
        app:step_plus_text="+"
        app:step_minus_weight="1"
        app:step_plus_weight="1"
        app:input_min="4"
        app:input_max="9"
        app:input_cur="5"
        app:input_is_input="true"
        />



    <ws.dyt.stepview.view.StepImageView
        android:id="@+id/stepImageView"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:step_minus_background_selector="@drawable/step_minus_background_selector"
        app:step_plus_background_selector="@drawable/step_plus_background_selector"
        app:step_minus_drawable_selector="@drawable/step_minus_image_selector"
        app:step_plus_drawable_selector="@drawable/step_plus_image_selector"
        app:input_min="5"
        app:input_max="12"
        app:input_cur="7"
        app:input_font_color="#aabb00"
        />

    <ws.dyt.stepview.view.StepTextView
        android:layout_marginTop="20dp"
        android:id="@+id/stepTextViewCus1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:step_font_size="22sp"
        app:step_minus_background_selector="@drawable/step_cus_background_selector"
        app:step_minus_font_selector="@drawable/step_cus_font_selector"
        app:step_minus_text="-"
        app:step_plus_background_selector="@drawable/step_cus_background_selector"
        app:step_plus_font_selector="@drawable/step_cus_font_selector"
        app:step_plus_text="+"
        app:step_minus_weight="1.2"
        app:step_plus_weight="1.2"
        app:input_min="0"
        app:input_max="15"
        app:input_cur="5"
        app:input_is_input="false"
        app:input_font_color="@color/colorPrimary"
        />

    <ws.dyt.stepview.view.StepImageView
        android:id="@+id/stepImageViewCus1"
        android:background="#888888"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:step_minus_background_selector="@drawable/step_cus_background_selector_1"
        app:step_plus_background_selector="@drawable/step_cus_background_selector_1"
        app:step_minus_drawable_selector="@drawable/step_minus_image_selector"
        app:step_plus_drawable_selector="@drawable/step_plus_image_selector"
        app:input_min="0"
        app:input_max="20"
        app:input_cur="10"
        app:step_minus_weight="1"
        app:step_plus_weight="1"
        />

</LinearLayout>
